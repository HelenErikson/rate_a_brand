<div class="page-header">
  <h1>
    Brands
    <a href="/brands/new" class="btn btn-lg btn-success">New Brand</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Brand logo</th>
        <th>User</th>
        <th>Rating</th>
        <th>Actions</th>
      </tr>

      <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td>
          <img src="<%= brand.image_url %>" class="img-thumbnail" width="250">
        </td>
        <td><%= User.find_by(:id => brand.user_id) %></td>
        <td>rating of <%= brand.review_id %></td>
        <td>
          <a href="/brands/<%= brand.id %>" class="btn btn-primary"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></a>
          <a href="/brands/<%= brand.id %>/edit" class="btn btn-warning"><i class="fa fa-plus" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
