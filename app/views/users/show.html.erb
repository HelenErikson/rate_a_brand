<div class="jumbotron">
 	   <h3> <%= @users.username %></h3>
     <p>
       rated these brands
     </p>
</div>



<div class="page-header">
  <h1>
    Brands
    <a href="/brands/new" class="btn btn-lg btn-success">Add New Brand</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">


      <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td>
          <img src="<%= brand.image_url %>" class="img-responsive"/>
        </td>
        <td><%= brand.user_id %></td>
        <td><%= brand.review_id %></td>
        <td>
          <a href="/brands/<%= brand.id %>" class="btn btn-primary"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></a>
          <a href="/brands/<%= brand.id %>/edit" class="btn btn-warning"><i class="fa fa-edit fa-lg" aria-hidden="true">  </i></a>
          <a href="/delete_brand/<%= brand.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o fa-lg" aria-hidden="true">  </i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
